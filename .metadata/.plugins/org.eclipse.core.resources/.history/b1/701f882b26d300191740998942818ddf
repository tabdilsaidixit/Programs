
public class myPow {
    public double myPow(double x, int n) {
        
    	if(x==0) {
    		return 0;
    	}
    	if(n ==0 ) {
    		return x;
    	}
    	if(n%2==0) {
    		x = Math.abs(x);
    	}
    	
    	double res = 1;
    	while(n!=0) {
    		if(n>0) {
    			res *= x;
    			n--;
    		}
    		if(n<0) {
    			res /= x;
    			n++;
    		}
    	}
    	return res;
    }
    
    public static void main(String[] args) {
		System.out.print(new myPow().myPow(-2, -4));
	}
}
