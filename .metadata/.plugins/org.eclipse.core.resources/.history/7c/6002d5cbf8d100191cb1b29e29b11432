
public class isHappy{
	
	 public boolean isHappy(int n) {
	        
		 
		 int temp = n;
		 int sum =0;
		 while(temp!=0) {
			 int rem = temp%10;
			 temp = temp/10;
			 sum = sum + (rem*rem);
		 }
		 if(sum ==1) {
			 return true;
		 }
		 else {
			 isHappy(sum);
		 }
		 
		 
		 return false;
	    }
	 public static void main(String[] args) {
		System.out.println(new isHappy().isHappy(19));
	}
}